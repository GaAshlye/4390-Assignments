@model TheCodingClub2.Projects

@{
    ViewData["Title"] = "Delete";
    Layout = "_FormLayout";
}

<div class="col-md-4 container background text-center">
<h1>Delete</h1>
</div>
<div class="col-md-4 container background text-center">
<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <div class=" container background ">
    <dl class="row">
        <dt class = "col-sm-4">
           Project Name
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.PName)
        </dd>
        <dt class = "col-sm-4">
            Due Date
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.dd)
        </dd>
        <dt class = "col-sm-4">
            Company Name
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.compname)
        </dd>
        <dt class = "col-sm-4">
            Team Lead
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.teamLead)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
</div>
